FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# Basic build/runtime deps; libgomp1 helps sklearn/numba when you add them later
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential git ca-certificates libgomp1 \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install minimal deps first (fast iteration)
COPY requirements-min.txt /tmp/requirements.txt
RUN pip install --upgrade pip && pip install -r /tmp/requirements.txt

# Set PYTHONPATH so /app/src is importable
ENV PYTHONPATH=/app/src

# Default command (can be overridden in compose)
CMD ["uvicorn", "mch.api.app:app", "--host", "0.0.0.0", "--port", "8000"]
